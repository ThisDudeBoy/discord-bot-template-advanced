# Discord Bot Configuration
# Created by AlexM (https://github.com/ThisDudeBoy)
# 
# Get these values from https://discord.com/developers/applications

# Discord Bot Token (keep this secret!)
DISCORD_TOKEN=your_bot_token_here

# Your Discord Application ID 
CLIENT_ID=your_client_id_here

# Your Discord Server ID (for testing)
GUILD_ID=your_guild_id_here

# Channel Configuration
# Replace these with your actual channel IDs

# Channel where welcome messages are sent for new members
WELCOME_CHANNEL_ID=your_welcome_channel_id

# Channel where CAPTCHA verification happens for new members
CAPTCHA_CHANNEL_ID=your_captcha_channel_id

# Role given to members after successful CAPTCHA verification
VERIFIED_ROLE_ID=your_verified_role_id

# Category where ticket channels will be created
TICKET_CATEGORY_ID=your_ticket_category_id

# Channel where moderation logs will be sent
LOG_CHANNEL_ID=your_log_channel_id

# Role that gets pinged when new tickets are created
STAFF_ROLE_ID=your_staff_role_id

# Environment (development or production)
NODE_ENV=development